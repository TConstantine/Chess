<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

  <TextView
      android:id="@+id/board_size_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/board_size_label"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/board_size"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <EditText
      android:id="@+id/board_size"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:text="@string/default_board_size"
      android:hint="@string/board_size_hint"
      android:ems="10"
      android:inputType="numberSigned"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/board_size_label"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/moves_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/moves_label" />

  <EditText
      android:id="@+id/moves"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/default_moves"
      android:hint="@string/moves_hint"
      android:inputType="numberSigned"
      android:ems="10" />

</androidx.constraintlayout.widget.ConstraintLayout>